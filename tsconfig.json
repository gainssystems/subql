{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "noImplicitThis": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "@subql/utils": ["packages/utils/src"],
      "@subql/utils/*": ["packages/utils/src/*"],
      "@subql/common": ["packages/common/src"],
      "@subql/common/*": ["packages/common/src/*"],
      "@subql/common-substrate": ["packages/common-substrate/src"],
      "@subql/common-substrate/*": ["packages/common-substrate/src/*"],
      "@subql/node-core": ["packages/node-core/src"],
      "@subql/node-core/*": ["packages/node-core/src/*"],
      "@subql/types-core": ["packages/types-core/src"],
      "@subql/types-core/*": ["packages/types-core/src/*"],
      "@subql/types": ["packages/types/src"],
      "@subql/types/*": ["packages/types/src/*"],
      "@subql/testing": ["packages/testing/src"],
      "@subql/testing/*": ["packages/testing/src/*"]
    }
  },
  "references": [
    {"path": "packages/cli"},
    {"path": "packages/common"},
    {"path": "packages/common-substrate"},
    {"path": "packages/node"},
    {"path": "packages/node-core"},
    {"path": "packages/types-core"},
    {"path": "packages/types"},
    {"path": "packages/utils"}
  ],
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules/**"],
  "typeRoots": ["./node_modules/@types"]
}
